# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
}

type User {
  id: ID!
  name: String!
  todos: [Todo!]!
}

type Query {
  todos(userId: ID): [Todo!]!
  user(id: ID!): User
}

input NewTodo {
  userId: String!
  text: String!
}

input UpdateTodo {
  text: String
  done: Boolean
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  updateTodo(id: ID!, input: UpdateTodo!): Todo!
}
